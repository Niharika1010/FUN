#Non-Keyword Arguments
def add(*n):
    sum=0
    for num in n:
        sum = sum + num
    print("Sum: ",sum)
add(2,3)
add(10,20,30)

print()

#Keyword Arguments
def intro(**data):
    for key,value in data.items():
        print("{} is {}".format(key,value))
intro(Firstname="Sita", Lastname="Rama", Age=22, Phone=1234567890)
print()
intro(Firstname="Niharika", Lastname="Penugurthi")
    
